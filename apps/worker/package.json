{
	"name": "worker",
	"version": "0.0.0",
	"private": true,
	"license": "SEE LICENSE IN ../../LICENSE",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "tsc && resolve-tspaths && NODE_ENV=production bun build src/index.ts --compile --minify --sourcemap --outfile dist/worker.out",
		"dev": "concurrently \"tsc-watch --onSuccess 'resolve-tspaths'\" \"bun --watch dist/index.js\"",
		"format": "eslint --fix . && prettier --write .",
		"lint": "eslint . && prettier --check .",
		"start": "./worker.out"
	},
	"dependencies": {
		"@llmgateway/cache": "workspace:*",
		"@llmgateway/db": "workspace:*",
		"@llmgateway/logger": "workspace:*",
		"@llmgateway/models": "workspace:*",
		"@llmgateway/shared": "workspace:*",
		"stripe": "18.1.1",
		"zod": "3.25.75"
	},
	"devDependencies": {}
}
