# Copy this file to .env.external-db and update the values

# Build metadata
APP_VERSION=local

# External database connection (cloud PostgreSQL)
DATABASE_URL=postgresql://username:password@your-db-host:5432/llmgateway?sslmode=require

# Public URLs (update when deploying behind custom domains)
UI_URL=http://localhost:3002
PLAYGROUND_URL=http://localhost:3003
API_URL=http://localhost:4002
API_BACKEND_URL=http://localhost:4002
ORIGIN_URLS=http://localhost:3002,http://localhost:3003,http://localhost:4002
COOKIE_DOMAIN=localhost

# Authentication and OAuth
PASSKEY_RP_ID=localhost
PASSKEY_RP_NAME=LLMGateway
AUTH_SECRET=replace-with-generated-secret
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Analytics (optional)
POSTHOG_KEY=
POSTHOG_HOST=

# Stripe billing (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_MONTHLY_PRICE_ID=
STRIPE_PRO_YEARLY_PRICE_ID=

# LLM providers
LLM_OPENAI_API_KEY=
LLM_ANTHROPIC_API_KEY=

# Azure OpenAI (required for Azure deployments)
LLM_AZURE_API_KEY=
LLM_AZURE_RESOURCE=
LLM_AZURE_API_VERSION=2024-10-21
LLM_AZURE_DEPLOYMENT_TYPE=ai-foundry

# Redis overrides (optional)
REDIS_PASSWORD=

# CI flag (keep false for local usage)
CI=false
