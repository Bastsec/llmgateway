{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./src",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"declaration": true,
		"outDir": "./dist/",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
